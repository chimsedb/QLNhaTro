
@{
    Layout = null;
}

<!DOCTYPE html>
<script type="text/javascript">
    function validateForm() {
        var vitri = document.forms["Form"]["vitri"].value;
        var giatien = document.forms["Form"]["giatien"].value;
        var kv = document.forms["Form"]["kv"].value;
        var dt = document.forms["Form"]["dt"].value;
        var phongngu = document.forms["Form"]["phongngu"].value;
        var phongtam = document.forms["Form"]["phongtam"].value;
        var gara = document.forms["Form"]["gara"].value;
        var anhmota = document.forms["Form"]["anhmota"].value;
        var tienich = document.forms["Form"]["tienich"].value;

        if (vitri == "") {
            alert("Vui lòng điền vị trí cho bài đăng");
            return false;
        }
        if (giatien == "") {
            alert("Vui lòng điền giá tiền cho bài đăng");
            return false;
        }
        if (kv == "") {
            alert("Vui lòng chọn khu vực cho bài đăng");
            return false;
        }
        if (dt == "") {
            alert("Vui lòng điền diện tích cho căn hộ của bạn");
            return false;
        }
        if (phongngu == "") {
            alert("Vui lòng điền số phòng ngủ cho căn hộ của bạn");
            return false;
        }
        if (phongtam == "") {
            alert("Vui lòng điền số phòng tắm cho căn hộ của bạn");
            return false;
        }
        if (gara == "") {
            alert("Vui lòng điền số gara cho căn hộ của bạn");
            return false;
        }
        if (anhmota == "") {
            alert("Vui lòng chọn số ảnh mô tả cho căn hộ của bạn");
            return false;
        }
        if (tienich == "") {
            alert("Vui lòng chọn số tiện ích cho căn hộ của bạn");
            return false;
        }
        
    }
</script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangBai</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .note {
            text-align: center;
            height: 80px;
            background: -webkit-linear-gradient(left, #0072ff, #8811c5);
            color: #fff;
            font-weight: bold;
            line-height: 80px;
        }

        .form-content {
            padding: 5%;
            border: 1px solid #ced4da;
            margin-bottom: 2%;
        }

        .form-control {
            border-radius: 1.5rem;
        }

        .btnSubmit {
            border: none;
            border-radius: 1.5rem;
            padding: 1%;
            width: 20%;
            cursor: pointer;
            background: #0062cc;
            color: #fff;
        }


        .file-field.medium .file-path-wrapper {
            height: 3rem;
        }

            .file-field.medium .file-path-wrapper .file-path {
                height: 2.8rem;
            }

        .file-field.big-2 .file-path-wrapper {
            height: 3.7rem;
        }

            .file-field.big-2 .file-path-wrapper .file-path {
                height: 3.5rem;
            }
    </style>
</head>
<body>
    <div class="container register-form">
        <div class="form">
            <div class="note">
                <p>Thông Tin Bài Đăng</p>
            </div>
            <div class="form-content">
                <form action="DangBai" method="post" onsubmit="return validateForm()" name="Form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="vitri" placeholder="Vị Trí" value="" />
                            </div>

                            <div class="form-group">
                                <select class="form-control" name="kv" id="exampleFormControlSelect1">
                                    <option value="" disabled selected>Thuộc Khu Vực</option>
                                    <option>Hoàn Kiếm</option>
                                    <option>Hai Bà Trưng</option>
                                    <option>Ba Đình</option>
                                    <option>Hoàng Mai</option>
                                    <option>Cầu Giấy</option>
                                </select>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="giatien" placeholder="Giá Tiền" value="" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="dt" placeholder="Diện Tích" value="" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="text" class="form-control" name="phongngu" placeholder="Số Phòng Ngủ" value="" />
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="text" class="form-control" name="phongtam" placeholder="Số Phòng Tắm" value="" />
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="text" class="form-control" name="gara" placeholder="Số Gara Để Xe" value="" />
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select class="form-control" id="anhmota" name="anhmota" onchange="anhmota()">
                                    <option value="" disabled selected>Chọn Số Lượng Ảnh Mô Tả</option>
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <option>@i</option>
                                    }
                                </select>
                            </div>
                            <div id="dsanhmota" class="row" style="padding-left:5%; padding-right:5%;">

                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select id="tienich" class="form-control" name="tienich" onchange="tienich()">
                                    <option value="" disabled selected>Chọn Số Tiện Ích</option>
                                    @for (int i = 0; i <= 12; i++)
                                    {
                                        <option>@i</option>
                                    }
                                </select>
                            </div>
                            <div id="dstienich" class="row">
                            </div>
                        </div>


                        <div class="col-md-8">
                            <button type="submit" class="btnSubmit" style="margin-left:65%;">Tiếp</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>



