
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="/Areas/Admin/custom/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/Areas/Admin/custom/css/sb-admin-2.min.css" rel="stylesheet">

    <script type="text/javascript">
        function validateForm() {
            var tendau = document.forms["Form"]["tendau"].value;
            var tencuoi = document.forms["Form"]["tencuoi"].value;
            var email = document.forms["Form"]["email"].value;
            var pass = document.forms["Form"]["pass"].value;
            var xacnhan = document.forms["Form"]["xacnhan"].value;
            if (tendau == "") {
                alert("Vui lòng điền họ và tên đệm của bạn");
                return false;
            }
            if (tencuoi == "") {
                alert("Vui lòng điền tên của bạn");
                return false;
            }
            if (email == "") {
                alert("Vui lòng điền email của bạn");
                return false;
            }
            if (pass == "") {
                alert("Vui lòng điền mật khẩu của bạn");
                return false;
            }
            if (pass != xacnhan) {
                alert("Mật khẩu xác nhận không khớp");
                return false;
            }
        }
    </script>
    <script language='javascript' type='text/javascript'>
		var checkregister = @Session["checkResgister"];
		if (checkregister)
            alert('Tài khoản của bạn đăng ký đã tồn tại vui lòng tạo lại');

    </script>
</head>


<body class="bg-gradient-primary">
    @{
        Session["checkResgister"] = null;
    }
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Tạo Mới Tài Khoản Của Bạn !</h1>
                            </div>
                            <form name="Form" class="user" action="@Url.Action("Index","DangKyAdmin")" method="post" onsubmit="return validateForm()">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Họ Và Tên Đệm" name="tendau">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Tên" name="tencuoi">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Address" name="email">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Mật Khẩu" name="pass">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Xác Nhận Mật Khẩu" name="xacnhan">
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Đăng Ký Tài Khoản">
                                <hr>
                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Đăng Ký Bằng Tài Khoản Google
                                </a>
                                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                    <i class="fab fa-facebook-f fa-fw"></i>  Đăng Ký Bằng Tài Khoản Facebook
                                </a>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Quên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("Index","DangNhapAdmin")">Bạn đã có tài khoản ? Tiến hành đăng nhập !</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/Areas/Admin/custom/vendor/jquery/jquery.min.js"></script>
    <script src="/Areas/Admin/custom/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Areas/Admin/custom/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Areas/Admin/custom/js/sb-admin-2.min.js"></script>

</body>

</html>
